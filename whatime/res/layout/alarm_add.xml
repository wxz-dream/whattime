<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/login_top_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_bg_blue" >

        <Button
            android:id="@+id/login_reback_btn"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/title_btn_back"
            android:text="@string/login_back"
            android:textColor="#fff"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="活动"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/save"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_bg" >

        <Button
            android:id="@+id/add_save"
            style="@style/RedGreen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/common_btn_red"
            android:text="保存" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/save"
        android:layout_below="@id/login_top_layout" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shape_bg"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginTop="5.0dip"
                    android:background="@drawable/shape_bg"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40.0dip"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingLeft="10dip"
                            android:text="标题"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <EditText
                            android:id="@+id/alarm_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10.0dip"
                            android:layout_marginRight="15.0dip"
                            android:background="@android:color/white"
                            android:hint="请输入提醒标题"
                            android:inputType="text"
                            android:maxLength="20"
                            android:paddingLeft="10.0dip"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <RelativeLayout
                        android:id="@+id/alarm_share"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:background="@drawable/common_strip_setting_middle"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical" >

                        <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="分享"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <TextView
                            android:id="@+id/alarm_share_label"
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="不分享"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/arrow_right_gray_white"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:paddingRight="8dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/alarm_des_ll"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dip"
                                android:text="描述"
                                android:textColor="@android:color/black"
                                android:textSize="18.0sp" />

                            <EditText
                                android:id="@+id/alarm_des"
                                android:layout_width="fill_parent"
                                android:layout_height="100dip"
                                android:layout_marginLeft="10.0dip"
                                android:layout_marginRight="1.0dip"
                                android:background="@drawable/shape_bg"
                                android:gravity="left|top"
                                android:hint="请输入描述信息"
                                android:inputType="textMultiLine|textLongMessage"
                                android:lines="100"
                                android:paddingLeft="10.0dip"
                                android:scrollbars="vertical"
                                android:textColor="#ff545454"
                                android:textSize="16.0sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1.0px"
                            android:background="@drawable/shape_line" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/alarm_state"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:background="@drawable/common_strip_setting_middle"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical" >

                        <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="状态"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <TextView
                            android:id="@+id/alarm_share_label"
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="当前活动状态"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/arrow_right_gray_white"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:paddingRight="8dp" />
                    </RelativeLayout>

                    <com.whatime.framework.ui.view.MyListView
                        android:id="@+id/add_common_lv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <Button
                        android:id="@+id/add_common_add"
                        style="@style/RedGreen"
                        android:layout_width="100dip"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10.0dip"
                        android:layout_marginTop="10.0dip"
                        android:background="@drawable/common_btn_red"
                        android:text="+"
                        android:textSize="35sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1.0px"
                        android:background="@drawable/shape_line" />

                    <RelativeLayout
                        android:id="@+id/alarm_cate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:background="@drawable/common_strip_setting_middle"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical" >

                        <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="分类"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <TextView
                            android:id="@+id/alarm_cate_label"
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="未选择"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/arrow_right_gray_white"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:paddingRight="8dp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/alarm_scope"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:background="@drawable/common_strip_setting_middle"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical" >

                        <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="范围"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <TextView
                            android:id="@+id/alarm_scope_label"
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="不限"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/arrow_right_gray_white"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:paddingRight="8dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/alarm_linkman"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dip"
                        android:layout_marginRight="1dip"
                        android:background="@drawable/common_strip_setting_middle"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center_vertical" >

                        <TextView
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="联系人"
                            android:textColor="@android:color/black"
                            android:textSize="18.0sp" />

                        <TextView
                            android:id="@+id/alarm_linkman_label"
                            style="@style/B4_Font_white"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="60dp"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="未选择"
                            android:textColor="#ff545454"
                            android:textSize="16.0sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawableRight="@drawable/arrow_right_gray_white"
                            android:duplicateParentState="true"
                            android:gravity="center_vertical"
                            android:paddingRight="8dp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/maxJoinNum_ll"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="40.0dip"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dip"
                                android:text="人数"
                                android:textColor="@android:color/black"
                                android:textSize="18.0sp" />

                            <EditText
                                android:id="@+id/maxJoinNum_label"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10.0dip"
                                android:layout_marginRight="15.0dip"
                                android:background="@android:color/white"
                                android:hint="最大参加人数"
                                android:inputType="number"
                                android:maxLength="20"
                                android:paddingLeft="10.0dip"
                                android:textColor="#ff545454"
                                android:textSize="16.0sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1.0px"
                            android:background="@drawable/shape_line" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/endtime_ll"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dip"
                                android:layout_marginTop="3dip"
                                android:gravity="center" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:paddingLeft="10dip"
                                    android:paddingRight="10dip"
                                    android:text="报名截止日期"
                                    android:textColor="@android:color/black"
                                    android:textSize="18.0sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/endtime_calendar_bt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50sp"
                                    android:layout_weight="1"
                                    android:background="@drawable/login_editbox"
                                    android:gravity="center"
                                    android:text="2014-5-5"
                                    android:textSize="20sp" />

                                <TextView
                                    android:id="@+id/endtime_time_bt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50sp"
                                    android:layout_weight="1"
                                    android:background="@drawable/login_editbox"
                                    android:gravity="center"
                                    android:text="18:9"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1.0px"
                                android:background="@drawable/shape_line" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/isend_ll"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="40.0dip"
                            android:clickable="false"
                            android:focusable="false" >

                            <TextView
                                style="@style/B4_Font_white"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="3dip"
                                android:duplicateParentState="true"
                                android:gravity="center_vertical"
                                android:padding="8dp"
                                android:text="截止报名"
                                android:textColor="@android:color/black"
                                android:textSize="18.0sp" />

                            <com.whatime.framework.ui.view.SwitchButton
                                android:id="@+id/isend_bt"
                                android:layout_width="80dip"
                                android:layout_height="28dip"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="8.0dip" />
                        </RelativeLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1.0px"
                            android:background="@drawable/shape_line" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>